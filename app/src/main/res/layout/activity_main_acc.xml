<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainGameJoy">

    <ImageView
        android:id="@+id/background_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/space_background" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/asteroid1"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:srcCompat="@drawable/asteroid1" />

        <ImageView
            android:id="@+id/asteroid2"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:srcCompat="@drawable/asteroid2" />

        <ImageView
            android:id="@+id/asteroid3"
            android:layout_width="180dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/asteroid3" />

        <ImageView
            android:id="@+id/asteroid4"
            android:layout_width="150dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/asteroid4" />

        <Chronometer
            android:id="@+id/simpleChronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="casual"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:translationY="20dp"
            app:layout_constraintTop_toTopOf="parent" />

    </FrameLayout>


    <ImageView
        android:id="@+id/tie"
        android:layout_width="77dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/tie"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

    <ImageView
        android:id="@+id/explosion"
        android:layout_width="100dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/explosion"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>